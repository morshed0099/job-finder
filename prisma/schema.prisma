generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  email    String     @unique
  status   UserStatus @default(Active)
  password String
  role     UserRole
  crateAt  DateTime   @default(now())
  updateAt DateTime   @updatedAt
  admin    Admin?

  @@map("users")
}

model Admin {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  profilePhoto String?
  phoneNumber  String
  isDeleted    Boolean  @default(false)
  createAt     DateTime @default(now())
  updateAt     DateTime @updatedAt
  user         User     @relation(fields: [email], references: [email])

  @@map("admin")
}

enum UserRole {
  Admin
  Normal
  SuperAdmin
}

enum UserStatus {
  Block
  Active
}
